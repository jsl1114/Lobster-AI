generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model cats {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  v          Int      @map("__v")
  lives      Int?
  name       String
  updated_at DateTime @db.Date
}

model posts {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  v        Int      @map("__v")
  postDate DateTime @db.Date
  text     String
}

model users {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  v        Int      @map("__v")
  password String
  post     String[]
  username String
}
