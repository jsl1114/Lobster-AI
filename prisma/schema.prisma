datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

generator client {
  provider = "prisma-client-js"
}

model UserApiLimit {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @unique
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserInfo {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String   @unique
  firstName    String
  lastName     String
  imageUrl     String
  email        String   @unique
  subscription String   @default("free")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
